<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.superzhang.demonews.activity.MainActivity"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RadioButton
            android:checked="true"
            android:button="@null"
            android:id="@+id/viewNews"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#DD0000"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/select_main_color"
            android:text="新闻"/>

        <RadioButton
            android:button="@null"
            android:id="@+id/viewJoke"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#EECC22"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/select_main_color"
            android:text="笑话"/>

        <RadioButton
            android:button="@null"
            android:id="@+id/viewWeather"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#0011FF"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/select_main_color"
            android:text="天气"/>

        <RadioButton
            android:button="@null"
            android:id="@+id/viewMine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#00AA00"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/select_main_color"
            android:text="我的"/>

    </RadioGroup>

</LinearLayout>
