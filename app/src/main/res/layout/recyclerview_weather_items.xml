<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview_weather"
    android:layout_centerVertical="true"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/tv_future_week"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="50dp"
            android:text="星期一"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/tv_future_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="50dp"
            android:text="20140804"
            android:textSize="26dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_future_weather"
        android:src="@drawable/cloudy3_night"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/tv_future_temperature"
        android:text="28℃~36℃"
        android:textSize="50dp"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="250dp">

        <TextView
            android:id="@+id/tv_future_weather"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:text="晴转多云"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_future_wind"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_marginRight="35dp"
            android:text="南风3-4级"
            android:textSize="22dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>